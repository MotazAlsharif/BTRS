@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayouts/_UserLayout.cshtml";
}
    <main>
        <div class="slider-area fix">
            <div class="slider-active">
                <div class="single-slider">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-xl-8 col-lg-8 col-md-9 col-sm-12">
                                <div class="hero__caption text-center">
                                    <h1 data-animation="fadeInUp" data-delay="0.1s">
                                        "Make My Trip" is just a
                                    <dd>few seconds away</dd>
                                    </h1>
                                    <p data-animation="fadeInUp" data-delay="0.6s">Let’s start your journey with us, your trips booking will come so simple</p>
                                    <a href="/User/SignIn" class="btn slider-btn " data-animation="bounceIn" data-delay="1s">Explore Destinations</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="car-img slider-bg1 slider-height d-flex justify-content-center align-items-end">
                <div class="container">
                    <div class="row ">
                        <div class="col-xl-10 col-lg-8 col-md-8 col-sm-8">
                            <div class="car running">
                                <img src="/img/hero/car.png" alt>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        
        
        
       
       
    </main>
    