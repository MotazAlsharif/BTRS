@model BRTS.Web.Models.Bus

@{
    ViewData["Title"] = "EditBus";
    Layout = "~/Views/Shared/AdminLayouts/_AdminLayout.cshtml";
}

<h1>EditBus</h1>

<h4>Bus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="EditBusRequest">
            <input type="hidden" value="@Model.BusId" name="BusId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BusId" />

            <div class="form-group">
                <label asp-for="TripId" class="control-label"></label>
                <input asp-for="TripId" name="TripId"  value="@Model.TripId" class="form-control" />
                <span asp-validation-for="TripId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Captin_Id" class="control-label"></label>
                <input asp-for="Captin_Id" name="Captin_Id" value="@Model.Captin_Id" class="form-control" />
                <span asp-validation-for="Captin_Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalSeats" class="control-label"></label>
                <input asp-for="TotalSeats" name="TotalSeats" value="@Model.TotalSeats" class="form-control" />
                <span asp-validation-for="TotalSeats" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AvailabelSeats" class="control-label"></label>
                <input asp-for="AvailabelSeats" name="AvailabelSeats" value="@Model.AvailabelSeats" class="form-control" />
                <span asp-validation-for="AvailabelSeats" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

